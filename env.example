# MARTA Demand Forecasting & Route Optimization Platform
# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://marta_user:marta_password@localhost:5432/marta_db
DB_HOST=localhost
DB_NAME=marta_db
DB_USER=marta_user
DB_PASSWORD=marta_password
DB_PORT=5432

# =============================================================================
# MARTA API CONFIGURATION
# =============================================================================
# Get your MARTA API key from: https://itsmarta.com/app-developer-resources.aspx
MARTA_API_KEY=your_marta_api_key_here

# GTFS Static Data URL (usually public)
MARTA_GTFS_STATIC_URL=https://itsmarta.com/app-developer-resources.aspx

# GTFS Real-time Data URLs (require API key)
MARTA_GTFS_RT_VEHICLE_URL=https://itsmarta.com/gtfs-rt/vehicle-positions/vehicle.pb
MARTA_GTFS_RT_TRIP_URL=https://itsmarta.com/gtfs-rt/trip-updates/tripupdate.pb

# MARTA KPI Data URL
MARTA_KPI_URL=https://itsmarta.com/KPIRidership.aspx

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# Get your OpenWeather API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Atlanta coordinates (default)
ATLANTA_LAT=33.7490
ATLANTA_LON=-84.3880

# =============================================================================
# AWS CONFIGURATION (Optional - for data lake)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=marta-data-lake

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
MODEL_VERSION=v1.0
SEQUENCE_LENGTH=24
PREDICTION_HORIZON=1
TRAIN_TEST_SPLIT=0.8
RANDOM_SEED=42

# =============================================================================
# GTFS REAL-TIME CONFIGURATION
# =============================================================================
GTFS_RT_POLL_INTERVAL=30
GTFS_RT_MAX_AGE=90

# =============================================================================
# MONITORING & ALERTS
# =============================================================================
# Webhook URL for alerts (Slack, Discord, etc.)
ALERT_WEBHOOK_URL=your_webhook_url_here
LOG_LEVEL=INFO

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=True

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
STREAMLIT_PORT=8501

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Mapbox API key for map integration
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to True for development, False for production
DEBUG=True
ENVIRONMENT=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Secret key for JWT tokens and session management
SECRET_KEY=your_secret_key_here_change_in_production

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3003,http://localhost:8501 